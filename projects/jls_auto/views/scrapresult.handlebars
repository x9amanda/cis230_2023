<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Your existing head content -->
</head>

<body>
    <h1>{{ title }}</h1>

    <table id="dataTable" style="display:block;" border="2">

        {{#if data}}

        <thead>
            <tr>
                <th>Year</th>
                <th>Make</th>
                <th>Model</th>
                <th>Curb Weight</th>
                <th>Scrap Steel Price</th>
                <th>Vehicle Scrap Price</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ data.year }}</td>
                <td>{{ data.make }}</td>
                <td>{{ data.model }}</td>
                <td>{{ data.curb_weight }}</td>
                <td>{{ data.scrapPrice }}</td>
                <td>{{ data.vehicleScrapPrice }}</td>
            </tr>
        </tbody>
        {{else}}
        <h1><em>No data available</em></h1>
        {{/if}}
        <img src="/images/snowjo.jpg" alt="Icon" height="150" width="200">
    </table>
    <script src="/scripts/scrapresult.js" defer></script>
</body>

</html>